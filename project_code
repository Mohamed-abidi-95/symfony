{# Progress Steps #}
<div class="steps-container">
    <div class="step-item {{ currentStep >= 1 ? 'active' : '' }} {{ currentStep > 1 ? 'completed' : '' }}">
        <div class="step-number">1</div>
        <div class="step-title">Personal Info</div>
    </div>
    <div class="step-item {{ currentStep >= 2 ? 'active' : '' }} {{ currentStep > 2 ? 'completed' : '' }}">
        <div class="step-number">2</div>
        <div class="step-title">Education</div>
    </div>
    <div class="step-item {{ currentStep >= 3 ? 'active' : '' }} {{ currentStep > 3 ? 'completed' : '' }}">
        <div class="step-number">3</div>
        <div class="step-title">Experience</div>
    </div>
    <div class="step-item {{ currentStep >= 4 ? 'active' : '' }} {{ currentStep > 4 ? 'completed' : '' }}">
        <div class="step-number">4</div>
        <div class="step-title">Skills</div>
    </div>
    <div class="step-item {{ currentStep >= 5 ? 'active' : '' }}">
        <div class="step-number">5</div>
        <div class="step-title">Review</div>
    </div>
</div>

<div class="progress-container">
    <div class="progress-bar" style="width: {{ currentStep * 20 }}%"></div>
</div>

<div class="text-muted text-end mb-3">
    <small>Last updated: {{ current_date|date('Y-m-d H:i:s') }} UTC by {{ current_user }}</small>
</div>
