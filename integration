                    {{ form_label(form.message, 'Pourquoi postulez-vous ?', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.message, {'attr': {
                        'class': 'form-control',
                        'placeholder': 'Expliquez en quelques mots pourquoi vous √™tes le candidat id√©al...'
                    }}) }}
                    <small class="text-muted">Minimum 150 caract√®res</small>
                </div>
            </div>
            
