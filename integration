    {
        return $this->id;
    }

    public function getHtmlContent(): ?string
    {
        return $this->htmlContent;
    }

    public function setHtmlContent(string $htmlContent): self
    {
        $this->htmlContent = $htmlContent;
        $this->updatedAt = new \DateTimeImmutable();
        return $this;
    }

