        --accent-color: #e5383b;
        --light-color: #f5f3f4;
        --white: #ffffff;
        --dark: #161a1d;
        --medium-gray: #b1a7a6;
        --shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        --transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
    }

    * {
        margin: 0;
