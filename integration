Fichier: src\Service\GeminiApiService.php
Chemin complet: C:\Users\Sh-Pc\Desktop\symfony checkpoint\Final\Esprimfinal-main\src\Service\GeminiApiService.php
-----
<?php

namespace App\Service;

use Symfony\Contracts\HttpClient\HttpClientInterface;
use Psr\Log\LoggerInterface;

class GeminiApiService
{
    private $client;
    private $apiKey;
    private $logger;

    public function __construct(
        HttpClientInterface $client, 
        string $apiKey,
        LoggerInterface $logger = null
    ) {
        $this->client = $client;
        $this->apiKey = $apiKey;
        $this->logger = $logger;
    }

    public function getChatResponse(string $message): string
    {
        try {
            $url = "https://generativelanguage.googleapis.com/v1beta/models/gemini-1.5-flash:generateContent?key=" . $this->apiKey;

            // Log la requ√™te (sans la cl√© API)
            if ($this->logger) {
                $this->logger->info('Envoi de requ√™te √† Gemini API', [
                    'message_length' => strlen($message)
                ]);
            }

            $response = $this->client->request('POST', $url, [
                'json' => [
                    'contents' => [[
                        'parts' => [[ 'text' => $message ]]
                    ]],
                    'generationConfig' => [
                        'temperature' => 0.7,
                        'topK' => 40,
                        'topP' => 0.95,
                        'maxOutputTokens' => 2048,
                    ]
                ]
            ]);

            $data = $response->toArray(false);

            // V√©rifier si la r√©ponse contient les donn√©es attendues
            if (!isset($data['candidates'][0]['content']['parts'][0]['text'])) {
                if ($this->logger) {
                    $this->logger->error('R√©ponse Gemini API invalide', [
                        'response' => json_encode($data)
                    ]);
                }
                return 'D√©sol√©, je n\'ai pas pu g√©n√©rer une r√©ponse. Veuillez r√©essayer.';
            }

            return $data['candidates'][0]['content']['parts'][0]['text'];
        } catch (\Exception $e) {
            if ($this->logger) {
                $this->logger->error('Erreur lors de l\'appel √† Gemini API', [
                    'error' => $e->getMessage()
                ]);
            }
            return 'Une erreur est survenue lors de la communication avec l\'API. D√©tail: ' . $e->getMessage();
        }
    }
}

