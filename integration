                        <span class="badge">{{ unread_count }}</span>
                    {% endif %}
                {% endif %}
            </a>
            <a href="{{ path('app_logout') }}" class="nav-item">
                <i class="fas fa-sign-out-alt"></i> D√©connexion
            </a>
